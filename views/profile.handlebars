
{{#if sessuser}}
<h1>Välkommen {{sessuser.username}}</h1>
<input type="hidden" id="username" value="{{sessuser.username}}">
<p class="left-text">lägg till information om dig!</p>
{{#if usersprofile}}

{{#each usersprofile}}
<div id="profile-set">
<div id="prof-text">

<p>Namn: {{name}}</p>
<p>Ålder: {{age}} år</p>
<p>Yrke: {{occupation}}</p>
    <form id="editbutton" action="/profile/aboutMe/{{id}}" method="GET">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <button class="save-button" type="submit">Ändra</button>
    </form>
</div>
</div>

    {{/each}}
{{else}}
<div id="profile-set">
<div id="prof-text">

    <form id="addprofile" action="/profile" method="POST" >
        <input id='name' class="form-control" name='name' placeholder='Name' type="text" required>
        <br>
        <input id='age' class="form-control" name='age' placeholder="Age" type="number" required>
        <br>
        <input id='occupation' class="form-control" name='occupation' placeholder="occupation" type="text" required>
        <br>
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <button type="submit" class="save-button">Save</button>
    </form>
</div>
</div>
{{/if}}

   {{/if}}
</div>