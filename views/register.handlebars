  <div class="loginform">
  <h1>Register</h1>
    <p>Sign up:</p>
    <form action="/register" method="POST">
    <input name="username" id='newusername' placeholder="Enter a username" required>
    <br>
    <input name="password" id='newpassword' placeholder="Enter a password" minlength="8" type="password" required>
    <br>
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <button type="submit">Create account</button>
    </form>
    </div>